<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:orientation="vertical">

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/medium_size"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:background="@drawable/edit_text_background"
        android:hint="@string/user_name"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        android:background="@drawable/edit_text_background"
        android:layout_margin="@dimen/medium_size"
        android:gravity="center"
        android:hint="@string/password"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_margin="@dimen/medium_size"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:gravity="center"
        android:hint="@string/Email"/>

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/medium_size"
        android:background="@color/global_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_margin="@dimen/medium_size"
        app:layout_constraintHorizontal_bias="0.2"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/register"/>

    <Button
        android:id="@+id/log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="@dimen/big_size"
        android:paddingVertical="@dimen/medium_size"
        android:background="@color/global_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_margin="@dimen/medium_size"
        app:layout_constraintHorizontal_bias="0.8"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/Log_in"/>

    <TextView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:fontFamily="sans-serif-condensed"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:textSize="16dp"
        android:text="if you have account please press Login button "/>


    <TextView
        android:id="@+id/producer"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/design_default_color_primary_dark"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.95"
        android:textSize="16dp"
        android:text="Developed by Mahdi Shahabedin"/>


</android.support.constraint.ConstraintLayout>